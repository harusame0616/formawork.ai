{
	"$schema": "https://biomejs.dev/schemas/2.3.3/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on",
				"useSortedAttributes": "on",
				"useSortedKeys": "on"
			}
		}
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},
	"files": {
		"includes": [
			"**",
			// 自動生成なので除外
			"!packages/db/drizzle"
		]
	},
	"linter": {
		"domains": {
			"next": "recommended",
			"tailwind": "recommended",
			"test": "recommended"
		}
	},
	"vcs": {
		"clientKind": "git",
		"defaultBranch": "main",
		"enabled": true,
		"useIgnoreFile": true
	}
}
