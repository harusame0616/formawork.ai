{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "nextjs",
  "extends": "./base.json",
  "lib": ["dom", "dom.iterable", "esnext"],
  "jsx": "react-jsx",
  "compilerOptions": {
    "paths": {
      "@/*": ["./*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ]
}
