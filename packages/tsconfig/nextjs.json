{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Nextjs",
	"extends": "./base.json",
	"lib": ["dom", "dom.iterable", "esnext"],
	"jsx": "react-jsx",
	"compilerOptions": {
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		".next/dev/types/**/*.ts",
		"**/*.mts"
	],
	"exclude": ["node_modules"]
}
